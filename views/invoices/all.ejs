<% layout('layouts/boilerplate') %>
<section class="index-invoices">
  <div>
    <h2 class="mb-3 color-purple-Grey">
      <strong><%- invoices.length %></strong> <%= invoices.length != 1 ?
      "Invoices" : "Invoice" %>
    </h2>
    <div class=" =d-flex justify-content-between">
      <select name="filter" id="invoice-all-filter">
        <option value="all">All Invoices</option>
        <option value="pending">Pending</option>
        <option value="paid">Paid</option>
      </select>
      <a href="/invoices/create">
        <button class="button button-primary">New Invoice</button>
      </a>
    </div>
  </div>
  <div class="my-5">
    <div id="invoice-search">
      <input id="invoice-search-bar" type="search" placeholder="Search invoices by client..." autofocus>
    </div>
    <div id="no-invoice-graphic" class=" mt-5 <%= invoices.length === 0 ? "d-flex" : "d-none" %> flex-column align-items-center justify-content-center">
          <img width="300px" src="/images/illustration-empty.svg" alt="No invoices to show">
          <h2 class="mt-3 mb-2 text-center font-bold">Nothing to see here</h2>
    </div>
  </div>
  <div id="invoice-cards-container"></div>
</section>