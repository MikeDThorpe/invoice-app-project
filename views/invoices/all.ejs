<% layout('layouts/boilerplate') %>
<section class="index-invoices">
  <div>
    <h2 class="mb-4 color-purple-Grey">
      <strong><%- invoices.length %></strong> <%= invoices.length != 1 ?
      "Invoices" : "Invoice" %>
    </h2>
    <div class="d-flex flex-wrap justify-content-between">
      <select name="filter" id="invoice-all-filter">
        <option value="all">All Invoices</option>
        <option value="pending">Pending Invoices</option>
        <option value="paid">Paid Invoices</option>
      </select>
      <input class="rounded form-control" type="search" id="invoice-search-bar" placeholder="Search Invoices...">
    </div>
  </div>
  <div class="my-5">
    <div id="no-invoice-graphic" class=" mt-5 <%= invoices.length === 0 ? "d-flex" : "d-none" %> flex-column align-items-center justify-content-center">
          <img width="300px" src="/images/illustration-empty.svg" alt="No invoices to show">
          <h3 class="mt-3 mb-2 text-center text-muted">No invoices to show</h3>
    </div>
  </div>
  <div id="invoice-cards-container" class="my-5"></div>
</section>